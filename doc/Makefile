##############################################################################
#                                System Config                               #
##############################################################################

LATEX = pdflatex

##############################################################################
#                             Project Config                                 #
##############################################################################

TARGETS = cpl_harmonics.pdf

##############################################################################
#                                   Recipes                                  #
##############################################################################

all: $(TARGETS)

%.pdf : %.tex
	$(LATEX) $<
	$(LATEX) $<


##############################################################################
#                               Utility Recipes                              #
##############################################################################

clean_build :
	@echo "Cleaning build files"
	@rm -f *.aux *.log *.out

clean : clean_build
	@echo "Cleaning output files"
	@rm -f cpl_harmonics.pdf 

.PHONY: all clean_build clean